{% liquid
  assign show_products = section.settings.show_products
  assign show_collections = section.settings.show_collections
  assign show_pages = section.settings.show_pages
  assign show_blogs = section.settings.show_blogs
  assign products_limit = section.settings.products_limit
  assign collections_limit = section.settings.collections_limit
%}

<div class="seo-sitemap section spacing-style color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}">

  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h1 class="seo-sitemap__heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="seo-sitemap__description rte">
        {{ section.settings.description }}
      </div>
    {% endif %}

    <div class="seo-sitemap__content">

      {% comment %} Collections {% endcomment %}
      {% if show_collections %}
        <div class="seo-sitemap__section">
          <h2 class="seo-sitemap__section-title">Collections</h2>
          <ul class="seo-sitemap__list">
            {% for collection in collections limit: collections_limit %}
              {% unless collection.handle == 'frontpage' %}
                <li class="seo-sitemap__list-item">
                  <a href="{{ collection.url }}" class="seo-sitemap__link">
                    {{ collection.title }}
                    <span class="seo-sitemap__count">({{ collection.products_count }} products)</span>
                  </a>
                </li>
              {% endunless %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {% comment %} Products {% endcomment %}
      {% if show_products %}
        <div class="seo-sitemap__section">
          <h2 class="seo-sitemap__section-title">Products</h2>
          <ul class="seo-sitemap__list seo-sitemap__list--columns">
            {% for product in collections.all.products limit: products_limit %}
              <li class="seo-sitemap__list-item">
                <a href="{{ product.url }}" class="seo-sitemap__link">
                  {{ product.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {% comment %} Pages {% endcomment %}
      {% if show_pages %}
        <div class="seo-sitemap__section">
          <h2 class="seo-sitemap__section-title">Pages</h2>
          <ul class="seo-sitemap__list">
            {% for page in pages %}
              <li class="seo-sitemap__list-item">
                <a href="{{ page.url }}" class="seo-sitemap__link">
                  {{ page.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {% comment %} Blogs & Articles {% endcomment %}
      {% if show_blogs %}
        {% for blog in blogs %}
          <div class="seo-sitemap__section">
            <h2 class="seo-sitemap__section-title">{{ blog.title }}</h2>
            <ul class="seo-sitemap__list">
              {% for article in blog.articles %}
                <li class="seo-sitemap__list-item">
                  <a href="{{ article.url }}" class="seo-sitemap__link">
                    {{ article.title }}
                    <span class="seo-sitemap__date">{{ article.published_at | date: '%b %d, %Y' }}</span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      {% endif %}

      {% comment %} Custom Links from Blocks {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="seo-sitemap__section">
          <h2 class="seo-sitemap__section-title">Additional Links</h2>
          <ul class="seo-sitemap__list">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'link' %}
                  {% if block.settings.url != blank %}
                    <li class="seo-sitemap__list-item" {{ block.shopify_attributes }}>
                      <a href="{{ block.settings.url }}" class="seo-sitemap__link">
                        {{ block.settings.link_text }}
                      </a>
                    </li>
                  {% endif %}

                {% when 'section_heading' %}
                  </ul>
                </div>
                <div class="seo-sitemap__section">
                  <h2 class="seo-sitemap__section-title" {{ block.shopify_attributes }}>
                    {{ block.settings.heading }}
                  </h2>
                  <ul class="seo-sitemap__list">
              {% endcase %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

    </div>
  </div>
</div>

{% schema %}
{
  "name": "SEO Sitemap",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Site Map"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "info": "Optional description for the sitemap"
    },
    {
      "type": "header",
      "content": "What to Show"
    },
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show collections",
      "default": true
    },
    {
      "type": "range",
      "id": "collections_limit",
      "label": "Collections limit",
      "min": 10,
      "max": 250,
      "step": 10,
      "default": 50,
      "info": "Maximum number of collections to display"
    },
    {
      "type": "checkbox",
      "id": "show_products",
      "label": "Show products",
      "default": true
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Products limit",
      "min": 50,
      "max": 500,
      "step": 50,
      "default": 250,
      "info": "Maximum number of products to display"
    },
    {
      "type": "checkbox",
      "id": "show_pages",
      "label": "Show pages",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_blogs",
      "label": "Show blog articles",
      "default": true
    },
    {
      "type": "header",
      "content": "SEO"
    },
    {
      "type": "checkbox",
      "id": "hide_from_search",
      "label": "Hide from search engines",
      "default": false,
      "info": "Add noindex meta tag to prevent search engine indexing"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Custom Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    },
    {
      "type": "section_heading",
      "name": "Section Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Section"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SEO Sitemap"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .seo-sitemap {
    position: relative;
  }

  .seo-sitemap__heading {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .seo-sitemap__description {
    margin-bottom: 2.5rem;
    opacity: 0.9;
    max-width: 800px;
  }

  .seo-sitemap__content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .seo-sitemap__section {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
    padding-bottom: 2rem;
  }

  .seo-sitemap__section:last-child {
    border-bottom: none;
  }

  .seo-sitemap__section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    color: rgb(var(--color-foreground));
  }

  .seo-sitemap__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.75rem;
  }

  .seo-sitemap__list--columns {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 0.5rem 1.5rem;
  }

  .seo-sitemap__list-item {
    line-height: 1.6;
  }

  .seo-sitemap__link {
    color: rgb(var(--color-link));
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  .seo-sitemap__link:hover {
    color: rgb(var(--color-link-hover));
    text-decoration: underline;
  }

  .seo-sitemap__count,
  .seo-sitemap__date {
    font-size: 0.85em;
    opacity: 0.7;
    font-weight: normal;
  }

  @media screen and (max-width: 749px) {
    .seo-sitemap__heading {
      font-size: 2rem;
    }

    .seo-sitemap__section-title {
      font-size: 1.25rem;
    }

    .seo-sitemap__list--columns {
      grid-template-columns: 1fr;
    }

    .seo-sitemap__content {
      gap: 2rem;
    }
  }
{% endstylesheet %}
