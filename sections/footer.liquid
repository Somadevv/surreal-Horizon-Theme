{% comment %}
  Custom Footer Section
  Auto-pulls:
    - Footer menu links (linklists.footer-menu)
    - Social links (linklists.social-links)
    - Payment icons
{% endcomment %}

<footer class="site-footer section-spacing color-scheme">
  <div class="footer-top page-width">
    
    <!-- Brand / About -->
    <div class="footer-column footer-brand">
      {% if settings.logo %}
        <img src="{{ settings.logo | image_url: width: 150 }}" alt="{{ shop.name }}" class="footer-logo">
      {% endif %}
      <p>{{ settings.footer_text }}</p>
    </div>

    <!-- Quick Links Menu -->
    <div class="footer-column footer-links">
      <h4>Quick Links</h4>
      <ul>
        {% for link in linklists.footer-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- Social + Newsletter -->
    <div class="footer-column footer-social">
      {% if linklists.social-links.links.size > 0 %}
        <h4>Follow Us</h4>
        <div class="social-icons">
          {% for link in linklists.social-links.links %}
            <a href="{{ link.url }}" target="_blank" rel="noopener">
              {% if link.icon != blank %}
                <img src="{{ link.icon | image_url: width: 24 }}" alt="{{ link.title }}">
              {% else %}
                {{ link.title }}
              {% endif %}
            </a>
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.enable_newsletter %}
        <h4>Subscribe</h4>
        <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="newsletter-form">
          <input type="email" name="contact[email]" placeholder="Email address" required>
          <button type="submit">Subscribe</button>
        </form>
      {% endif %}
    </div>

  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom page-width">
    <div class="payment-icons">
      {% for type in shop.enabled_payment_types %}
        <span class="payment-icon payment-{{ type | downcase }}"></span>
      {% endfor %}
    </div>
    <p>Â© {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
  </div>
</footer>

{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Description",
      "default": "Delivering the best plants to your home and garden."
    },
    {
      "type": "checkbox",
      "id": "enable_newsletter",
      "label": "Enable Newsletter Signup",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Custom Footer"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.site-footer {
  background: #111;
  color: #fff;
  padding: 4rem 2rem;
  font-family: sans-serif;
}

.footer-top {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-column h4 {
  font-weight: 700;
  margin-bottom: 1rem;
}

.footer-column ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-column ul li {
  margin-bottom: 0.5rem;
}

.footer-column a {
  color: #fff;
  text-decoration: none;
}

.footer-column a:hover {
  text-decoration: underline;
}

.footer-logo {
  margin-bottom: 1rem;
  max-width: 150px;
}

.social-icons {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.social-icons img {
  width: 24px;
  height: 24px;
}

.newsletter-form {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.newsletter-form input {
  flex: 1;
  padding: 0.5rem;
  border-radius: 4px;
  border: none;
}

.newsletter-form button {
  background: #fff;
  color: #111;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  cursor: pointer;
}

.footer-bottom {
  border-top: 1px solid rgba(255,255,255,0.2);
  padding-top: 1rem;
  text-align: center;
  font-size: 0.9rem;
}

.payment-icons {
  margin-bottom: 0.5rem;
}

@media screen and (max-width: 749px) {
  .footer-top {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %}
