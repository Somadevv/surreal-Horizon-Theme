{% doc %}
  @prompt
    product description using the vitals tabs
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-tabs-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-tabs__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-tabs__tab-list-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.tab_spacing }}px;
    border-bottom: {{ block.settings.tab_border_width }}px solid {{ block.settings.tab_border_color }};
    margin-bottom: {{ block.settings.content_spacing }}px;
    overflow-x: auto;
    scrollbar-width: thin;
  }

  .ai-product-tabs__tab-button-{{ ai_gen_id }} {
    background: none;
    border: none;
    padding: {{ block.settings.tab_padding_vertical }}px {{ block.settings.tab_padding_horizontal }}px;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: {{ block.settings.tab_font_weight }};
    color: {{ block.settings.tab_text_color }};
    cursor: pointer;
    position: relative;
    white-space: nowrap;
    transition: color 0.3s ease;
    border-bottom: {{ block.settings.active_tab_border_width }}px solid transparent;
    margin-bottom: -{{ block.settings.tab_border_width }}px;
  }

  .ai-product-tabs__tab-button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_hover_color }};
  }

  .ai-product-tabs__tab-button-{{ ai_gen_id }}.active {
    color: {{ block.settings.active_tab_color }};
    border-bottom-color: {{ block.settings.active_tab_border_color }};
  }

  .ai-product-tabs__content-{{ ai_gen_id }} {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-product-tabs__content-{{ ai_gen_id }}.active {
    display: block;
    opacity: 1;
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
    color: {{ block.settings.content_text_color }};
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} h1,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} h2,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} h3,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} h4,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} h5,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} h6 {
    margin-top: 0;
    margin-bottom: 12px;
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} p {
    margin-top: 0;
    margin-bottom: 16px;
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} ul,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} ol {
    margin-top: 0;
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 16px;
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} th,
  .ai-product-tabs__content-inner-{{ ai_gen_id }} td {
    padding: 12px;
    text-align: left;
    border: 1px solid {{ block.settings.tab_border_color }};
  }

  .ai-product-tabs__content-inner-{{ ai_gen_id }} th {
    font-weight: 600;
    background-color: {{ block.settings.table_header_bg }};
  }

  @media screen and (max-width: 749px) {
    .ai-product-tabs__tab-list-{{ ai_gen_id }} {
      gap: {{ block.settings.tab_spacing | times: 0.7 }}px;
    }

    .ai-product-tabs__tab-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.tab_font_size | times: 0.9 }}px;
      padding: {{ block.settings.tab_padding_vertical | times: 0.8 }}px {{ block.settings.tab_padding_horizontal | times: 0.8 }}px;
    }

    .ai-product-tabs__content-inner-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<product-tabs-{{ ai_gen_id }} class="ai-product-tabs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-tabs__container-{{ ai_gen_id }}">
    <div class="ai-product-tabs__tab-list-{{ ai_gen_id }}" role="tablist">
      {% if block.settings.show_description and product.description != blank %}
        <button
          class="ai-product-tabs__tab-button-{{ ai_gen_id }} active"
          role="tab"
          aria-selected="true"
          aria-controls="tab-description-{{ ai_gen_id }}"
          data-tab="description"
        >
          {{ block.settings.description_label }}
        </button>
      {% endif %}

      {% if block.settings.show_tab_1 and block.settings.tab_1_content != blank %}
        <button
          class="ai-product-tabs__tab-button-{{ ai_gen_id }} {% unless block.settings.show_description and product.description != blank %}active{% endunless %}"
          role="tab"
          aria-selected="{% unless block.settings.show_description and product.description != blank %}true{% else %}false{% endunless %}"
          aria-controls="tab-1-{{ ai_gen_id }}"
          data-tab="tab-1"
        >
          {{ block.settings.tab_1_title }}
        </button>
      {% endif %}

      {% if block.settings.show_tab_2 and block.settings.tab_2_content != blank %}
        <button
          class="ai-product-tabs__tab-button-{{ ai_gen_id }}"
          role="tab"
          aria-selected="false"
          aria-controls="tab-2-{{ ai_gen_id }}"
          data-tab="tab-2"
        >
          {{ block.settings.tab_2_title }}
        </button>
      {% endif %}

      {% if block.settings.show_tab_3 and block.settings.tab_3_content != blank %}
        <button
          class="ai-product-tabs__tab-button-{{ ai_gen_id }}"
          role="tab"
          aria-selected="false"
          aria-controls="tab-3-{{ ai_gen_id }}"
          data-tab="tab-3"
        >
          {{ block.settings.tab_3_title }}
        </button>
      {% endif %}
    </div>

    <div class="ai-product-tabs__panels-{{ ai_gen_id }}">
      {% if block.settings.show_description and product.description != blank %}
        <div
          class="ai-product-tabs__content-{{ ai_gen_id }} active"
          role="tabpanel"
          id="tab-description-{{ ai_gen_id }}"
          data-panel="description"
        >
          <div class="ai-product-tabs__content-inner-{{ ai_gen_id }}">
            {{ product.description }}
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_tab_1 and block.settings.tab_1_content != blank %}
        <div
          class="ai-product-tabs__content-{{ ai_gen_id }} {% unless block.settings.show_description and product.description != blank %}active{% endunless %}"
          role="tabpanel"
          id="tab-1-{{ ai_gen_id }}"
          data-panel="tab-1"
        >
          <div class="ai-product-tabs__content-inner-{{ ai_gen_id }}">
            {{ block.settings.tab_1_content }}
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_tab_2 and block.settings.tab_2_content != blank %}
        <div
          class="ai-product-tabs__content-{{ ai_gen_id }}"
          role="tabpanel"
          id="tab-2-{{ ai_gen_id }}"
          data-panel="tab-2"
        >
          <div class="ai-product-tabs__content-inner-{{ ai_gen_id }}">
            {{ block.settings.tab_2_content }}
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_tab_3 and block.settings.tab_3_content != blank %}
        <div
          class="ai-product-tabs__content-{{ ai_gen_id }}"
          role="tabpanel"
          id="tab-3-{{ ai_gen_id }}"
          data-panel="tab-3"
        >
          <div class="ai-product-tabs__content-inner-{{ ai_gen_id }}">
            {{ block.settings.tab_3_content }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</product-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-product-tabs__tab-button-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.ai-product-tabs__content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const targetPanel = tab.getAttribute('data-tab');
            this.switchTab(targetPanel);
          });
        });
      }

      switchTab(targetPanel) {
        this.tabs.forEach((tab) => {
          const isActive = tab.getAttribute('data-tab') === targetPanel;
          tab.classList.toggle('active', isActive);
          tab.setAttribute('aria-selected', isActive);
        });

        this.panels.forEach((panel) => {
          const isActive = panel.getAttribute('data-panel') === targetPanel;
          panel.classList.toggle('active', isActive);
        });
      }
    }

    customElements.define('product-tabs-{{ ai_gen_id }}', ProductTabs{{ ai_gen_id }});
  })();
</script>

