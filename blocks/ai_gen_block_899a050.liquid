{% doc %}
  @prompt
    pill buttons carousel for collections allow space at the side of the pill buttons. allow this side space to be toggled off on mobile, allow up to 100 px side space
    

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .pill-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .pill-carousel__container-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
    gap: {{ block.settings.gap }}px;
    padding-left: {{ block.settings.side_space }}px;
    padding-right: {{ block.settings.side_space }}px;padding-top: {{ block.settings.vertical_padding }}px;
    padding-bottom: {{ block.settings.vertical_padding }}px;
  }

  .pill-carousel__container-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }

  .pill-button-{{ ai_gen_id }} {
    flex: 0 0 auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.vertical_padding_pill }}px {{ block.settings.horizontal_padding_pill }}px;
    background-color: {{ block.settings.pill_background }};
    color: {{ block.settings.pill_text_color }};
    border-radius: {{ block.settings.border_radius }}px;
    font-size: {{ block.settings.font_size }}px;
    text-decoration: none;
    white-space: nowrap;
    transition: background-color 0.3s, color 0.3s;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .pill-button-{{ ai_gen_id }}:hover,
  .pill-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.pill_background_active }};
    color: {{ block.settings.pill_text_color_active }};
    border-color: {{ block.settings.border_color_active }};
  }

  .pill-carousel__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    pointer-events: none;
    z-index: 2;
  }

  .pill-carousel__button-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border-radius: 50%;
    border: none;
    cursor: pointer;
    pointer-events: auto;
    opacity: 0.8;
    transition: opacity 0.3s;
  }

  .pill-carousel__button-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .pill-carousel__button-prev-{{ ai_gen_id }} {
    margin-left:10px;
  }

  .pill-carousel__button-next-{{ ai_gen_id }} {
    margin-right: 10px;
  }

  @media screen and (max-width: 749px) {
    .pill-carousel__container-{{ ai_gen_id }} {
      {% if block.settings.remove_side_space_mobile %}
        padding-left: 0;
        padding-right: 0;
      {% endif %}
      gap: {{ block.settings.gap_mobile }}px;
    }

    .pill-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
      padding: {{ block.settings.vertical_padding_pill_mobile }}px {{ block.settings.horizontal_padding_pill_mobile }}px;
    }

    {% if block.settings.hide_arrows_on_mobile %}
      .pill-carousel__nav-{{ ai_gen_id }} {
        display: none;
      }
    {% endif %}
  }
{% endstyle %}

<div class="pill-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="pill-carousel__container-{{ ai_gen_id }}" id="pill-carousel-container-{{ ai_gen_id }}">
    {% if block.settings.show_all_option %}
      <a 
        href="{{ collections[block.settings.all_collections_link].url }}" 
        class="pill-button-{{ ai_gen_id }} {% if request.path == collections[block.settings.all_collections_link].url %}active{% endif %}">
        {{ block.settings.all_collections_text }}
      </a>
    {% endif %}
    
    {% for collection_item in block.settings.collection_list %}
      {% if collection_item.id != blank %}
        <a 
          href="{{ collection_item.url }}" 
          class="pill-button-{{ ai_gen_id }} {% if request.path == collection_item.url %}active{% endif %}"
        >
          {{ collection_item.title }}
        </a>
      {% endif %}
    {% endfor %}
  </div>

  {% if block.settings.show_arrows %}
    <div class="pill-carousel__nav-{{ ai_gen_id }}">
      <button class="pill-carousel__button-{{ ai_gen_id }} pill-carousel__button-prev-{{ ai_gen_id }}" aria-label="Previous">
        <svg width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7 1L1 7L7 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="pill-carousel__button-{{ ai_gen_id }} pill-carousel__button-next-{{ ai_gen_id }}" aria-label="Next">
        <svg width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L7 7L1 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  {% endif %}
</div>

<script>
  (function() {
    class PillCarousel extends HTMLElement {
      constructor() {
        super();
        this.container = this.querySelector('#pill-carousel-container-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.pill-carousel__button-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.pill-carousel__button-next-{{ ai_gen_id }}');
        this.scrollAmount = 200;}

      connectedCallback() {
        if (this.prevButton && this.nextButton) {
          this.prevButton.addEventListener('click', this.scrollPrev.bind(this));
          this.nextButton.addEventListener('click', this.scrollNext.bind(this));
        }

        // Scroll active pill into view on page load
        const activePill = this.querySelector('.pill-button-{{ ai_gen_id }}.active');
        if (activePill) {
          setTimeout(() => {
            this.scrollToElement(activePill);
          }, 100);
        }
      }

      scrollPrev() {
        this.container.scrollBy({
          left: -this.scrollAmount,
          behavior: 'smooth'
        });
      }

      scrollNext() {
        this.container.scrollBy({
          left: this.scrollAmount,
          behavior: 'smooth'
        });
      }

      scrollToElement(element) {
        if (!element) return;
        
        const containerRect = this.container.getBoundingClientRect();
        const elementRect = element.getBoundingClientRect();
        // Calculate the scroll position to center the element
        const scrollLeft = element.offsetLeft - (containerRect.width / 2) + (elementRect.width / 2);
        
        this.container.scrollTo({
          left: scrollLeft,
          behavior: 'smooth'
        });
      }
    }

    customElements.define('pill-carousel-{{ ai_gen_id }}', PillCarousel);
  })();
</script>

