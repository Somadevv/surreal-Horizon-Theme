{% doc %}
  @prompt
    image carousel
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-carousel-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.carousel_height }}px;
  }

  .ai-image-carousel-track-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease;
  }

  .ai-image-carousel-slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-image-carousel-slide-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-image-carousel-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-carousel-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-carousel-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_text_color }};
    border: none;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-image-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    color: {{ block.settings.nav_button_hover_text_color }};
    transform: translateY(-50%) scale(1.05);
  }

  .ai-image-carousel-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: translateY(-50%) scale(1);
  }

  .ai-image-carousel-nav-prev-{{ ai_gen_id }} {
    left: 16px;
  }

  .ai-image-carousel-nav-next-{{ ai_gen_id }} {
    right: 16px;
  }

  .ai-image-carousel-nav-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-image-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    padding: 16px 0;
    margin-top: 16px;
  }

  .ai-image-carousel-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.4;
  }

  .ai-image-carousel-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-image-carousel-dot-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  {% unless block.settings.show_navigation %}
    .ai-image-carousel-nav-{{ ai_gen_id }} {
      display: none;
    }
  {% endunless %}

  {% unless block.settings.show_dots %}
    .ai-image-carousel-dots-{{ ai_gen_id }} {
      display: none;
    }
  {% endunless %}

  @media screen and (max-width: 749px) {
    .ai-image-carousel-container-{{ ai_gen_id }} {
      height: {{ block.settings.carousel_height | times: 0.75 }}px;
    }

    .ai-image-carousel-nav-{{ ai_gen_id }} {
      width: 36px;
      height: 36px;
    }

    .ai-image-carousel-nav-{{ ai_gen_id }} svg {
      width: 16px;
      height: 16px;
    }

    .ai-image-carousel-nav-prev-{{ ai_gen_id }} {
      left: 12px;
    }

    .ai-image-carousel-nav-next-{{ ai_gen_id }} {
      right: 12px;
    }
  }
{% endstyle %}

<image-carousel-{{ ai_gen_id }}
  class="ai-image-carousel-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-carousel-container-{{ ai_gen_id }}">
    <div class="ai-image-carousel-track-{{ ai_gen_id }}">
      {% assign has_images = false %}
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign image = block.settings[image_key]
        %}
        {% if image != blank %}
          {% assign has_images = true %}
          <div class="ai-image-carousel-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
            <img
              src="{{ image | image_url: width: 1200 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
            >
          </div>
        {% endif %}
      {% endfor %}

      {% unless has_images %}
        <div class="ai-image-carousel-slide-{{ ai_gen_id }}" data-slide="0">
          <div class="ai-image-carousel-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-image-carousel-empty-state-{{ ai_gen_id }}">
              Add images to create your carousel
            </div>
          </div>
        </div>
      {% endunless %}
    </div>

    {% if has_images and block.settings.show_navigation %}
      <button
        class="ai-image-carousel-nav-{{ ai_gen_id }} ai-image-carousel-nav-prev-{{ ai_gen_id }}"
        aria-label="Previous image"
        data-direction="prev"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button
        class="ai-image-carousel-nav-{{ ai_gen_id }} ai-image-carousel-nav-next-{{ ai_gen_id }}"
        aria-label="Next image"
        data-direction="next"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}
  </div>

  {% if has_images and block.settings.show_dots %}
    <div class="ai-image-carousel-dots-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign image = block.settings[image_key]
        %}
        {% if image != blank %}
          <button
            class="ai-image-carousel-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            aria-label="Go to slide {{ forloop.index }}"
            data-slide="{{ forloop.index0 }}"
          ></button>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</image-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.autoplayInterval = null;
        this.isAutoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-image-carousel-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-image-carousel-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-image-carousel-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-image-carousel-nav-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-image-carousel-dot-{{ ai_gen_id }}');

        this.totalSlides = this.slides.length;

        if (this.totalSlides <= 1) return;

        this.setupEventListeners();
        this.updateCarousel();

        if (this.isAutoplay) {
          this.startAutoplay();
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') {
            this.goToPrevSlide();
          } else if (e.key === 'ArrowRight') {
            this.goToNextSlide();
          }
        });

        let startX = 0;
        let endX = 0;

        this.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
        });

        this.addEventListener('touchend', (e) => {
          endX = e.changedTouches[0].clientX;
          const diff = startX - endX;

          if (Math.abs(diff) > 50) {
            if (diff > 0) {
              this.goToNextSlide();
            } else {
              this.goToPrevSlide();
            }
          }
        });
      }

      goToPrevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.totalSlides - 1 : this.currentSlide - 1;
        this.updateCarousel();
      }

      goToNextSlide() {
        this.currentSlide = this.currentSlide === this.totalSlides - 1 ? 0 : this.currentSlide + 1;
        this.updateCarousel();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
      }

      updateCarousel() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });

        if (this.prevButton) {
          this.prevButton.disabled = this.currentSlide === 0;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.currentSlide === this.totalSlides - 1;
        }
      }

      startAutoplay() {
        if (!this.isAutoplay || this.totalSlides <= 1) return;

        this.autoplayInterval = setInterval(() => {
          this.goToNextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('image-carousel-{{ ai_gen_id }}', ImageCarousel{{ ai_gen_id }});
  })();
</script>

