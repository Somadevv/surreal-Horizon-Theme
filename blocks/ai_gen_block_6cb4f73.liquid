        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    }
  ],
  "presets": [
    {
      "name": "Pills Collection Carousel"
    }
  ]
