          <div class="brand-strength-title-{{ ai_gen_id }}">{{ block.settings[title_key] }}</div>
          <div class="brand-strength-description-{{ ai_gen_id }}">{{ block.settings[description_key] }}</div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="brand-strengths-right-{{ ai_gen_id }}">
    <h3 class="featured-award-title-{{ ai_gen_id }}">{{ block.settings.featured_title }}</h3>
    <p class="featured-award-description-{{ ai_gen_id }}">{{ block.settings.featured_description }}</p>
