          src="{{ block.settings.award_image | image_url: width: 800 }}"
          alt="{{ block.settings.award_image.alt | escape }}"
          loading="lazy"
          class="featured-award-image-{{ ai_gen_id }}"
          width="{{ block.settings.award_image.width }}"
          height="{{ block.settings.award_image.height }}"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
    </div>
  </div>
</div>

