{% doc %}
  @prompt
    pill buttons carousel for collections allow space at the side of the pill buttons

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .collection-pills-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: {{ block.settings.vertical_padding }}px 0;
  }

  .collection-pills__container-{{ ai_gen_id }} {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    gap: {{ block.settings.gap }}px;
    padding: 0 {{ block.settings.side_padding }}px;
  }

  .collection-pills__container-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .collection-pill-{{ ai_gen_id }} {
    flex: 0 0 auto;
    white-space: nowrap;
    text-decoration: none;
    padding: {{ block.settings.pill_padding_vertical }}px {{ block.settings.pill_padding_horizontal }}px;
    border-radius: {{ block.settings.border_radius }}px;
    font-size: {{ block.settings.font_size }}px;
    transition: background-color 0.3s, color 0.3s;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};}

  .collection-pill-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.background_hover_color }};
    color: {{ block.settings.text_hover_color }};border-color: {{ block.settings.border_hover_color }};
  }

  .collection-pill-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.active_background_color }};
    color: {{ block.settings.active_text_color }};
    border-color: {{ block.settings.active_border_color }};
  }

  .collection-pills__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.arrow_background_color }};
    color: {{ block.settings.arrow_color }};
    border-radius: 50%;
    border: none;
    cursor: pointer;
    z-index: 2;
    opacity: 0.8;
    transition: opacity 0.3s;
  }

  .collection-pills__arrow-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .collection-pills__arrow-{{ ai_gen_id }}--prev {
    left:10px;
  }

  .collection-pills__arrow-{{ ai_gen_id }}--next {
    right: 10px;
  }

  .collection-pills__arrow-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  @media screen and (max-width: 749px) {
    .collection-pills__arrow-{{ ai_gen_id }} {
      display: none;
    }
    
    .collection-pill-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
      padding: {{ block.settings.pill_padding_vertical_mobile }}px {{ block.settings.pill_padding_horizontal_mobile }}px;
    }
  }
{% endstyle %}

<div class="collection-pills-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_arrows %}
    <button class="collection-pills__arrow-{{ ai_gen_id }} collection-pills__arrow-{{ ai_gen_id }}--prev" aria-label="Scroll left">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
  {% endif %}
  
  <div class="collection-pills__container-{{ ai_gen_id }}">
    {% if block.settings.collection_list != blank %}
      {% for collection in block.settings.collection_list %}
        {% if collection != blank %}
          <a 
            href="{{ collection.url }}" 
            class="collection-pill-{{ ai_gen_id }} {% if collection.url contains request.path %}active{% endif %}">
            {{ collection.title }}
          </a>
        {% endif %}
      {% endfor %}
    {% else %}
      {% for i in (1..5) %}
        <a href="#" class="collection-pill-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}">
          Collection {{ i }}
        </a>
      {% endfor %}
    {% endif %}
  </div>
  
  {% if block.settings.show_arrows %}
    <button class="collection-pills__arrow-{{ ai_gen_id }} collection-pills__arrow-{{ ai_gen_id }}--next" aria-label="Scroll right">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  {% endif %}
</div><script>
  (function() {
    const container = document.querySelector('.collection-pills__container-{{ ai_gen_id }}');
    const prevButton = document.querySelector('.collection-pills__arrow-{{ ai_gen_id }}--prev');
    const nextButton = document.querySelector('.collection-pills__arrow-{{ ai_gen_id }}--next');
    
    if (!container) return;
    
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        container.scrollBy({
          left: -200,
          behavior: 'smooth'
        });
      });
    }
    
    if (nextButton) {
      nextButton.addEventListener('click', () => {
        container.scrollBy({
          left: 200,
          behavior: 'smooth'
        });
      });
    }
  })();
</script>

