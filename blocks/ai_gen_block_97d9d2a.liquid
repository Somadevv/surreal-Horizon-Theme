{% doc %}
  @prompt
    a grid to showcase brand strengths

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .brand-strengths-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .brand-strengths__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .brand-strengths__heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
  }

  .brand-strengths__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .brand-strengths__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.text_alignment }};
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    height: 100%;
  }

  .brand-strengths__icon-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-strengths__icon-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .brand-strengths__icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-strengths__icon-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .brand-strengths__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin-bottom: 10px;
    color: {{ block.settings.title_color }};
  }

  .brand-strengths__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .brand-strengths__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
    
    .brand-strengths__heading-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.heading_spacing | divided_by: 1.5 }}px;
    }
    
    .brand-strengths__icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }
    
    .brand-strengths__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }
    
    .brand-strengths__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="brand-strengths-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="brand-strengths__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="brand-strengths__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    <div class="brand-strengths__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% assign title_key = 'title_' | append: i %}
        {% assign description_key = 'description_' | append: i %}
        {% assign icon_key = 'icon_' | append: i %}
        
        {% if block.settings[title_key] != blank %}
          <div class="brand-strengths__item-{{ ai_gen_id }}">
            <div class="brand-strengths__icon-wrapper-{{ ai_gen_id }}">
              {% if block.settings[icon_key] != blank %}
                <img 
                  src="{{ block.settings[icon_key] | img_url: '100x' }}" 
                  alt="{{ block.settings[title_key] }}" 
                  loading="lazy" 
                  class="brand-strengths__icon-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="brand-strengths__icon-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div><h3 class="brand-strengths__title-{{ ai_gen_id }}">{{ block.settings[title_key] }}</h3>
            
            {% if block.settings[description_key] != blank %}
              <div class="brand-strengths__description-{{ ai_gen_id }}">{{ block.settings[description_key] }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

